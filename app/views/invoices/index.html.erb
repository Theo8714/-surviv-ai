<div class="container">
  <h1>Liste des factures</h1>
  <div class="search-bar ">
    <%= form_with url: user_invoices_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Filtre par numéro de facture"
        %>
      <%= submit_tag "Filtrer", name: "", class: "btn btn-primary" %>
    <% end %>
    </div>
  <div class="row justify-content-center">
    <div class="col-sm-12 my-3">
      <div class="cards">
        <% @invoices.each do |invoice|%>
          <div class="card card-beige">
            <p>Client : <%= invoice.debtor.company_name %></p>
            <p>Numéro de facture : <strong><%= invoice.number %> </strong></p>
            <p>Montant de l'encours : <%= invoice.amount %>€</p>
            <p>Date d'émission:
              <%= invoice.emission_date %></p>
            <p>Date de l'échéance :
              <%= invoice.payment_date %></p>
              <div>
                <%= link_to "Voir plus", user_invoice_path(current_user, invoice), class: "btn btn-primary" %>
              </div>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
